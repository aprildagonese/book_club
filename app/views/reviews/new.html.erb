<% if @review.errors %>
<ul id="errors">
  <% @review.errors.full_messages.each do |message| %>
  <li><%= message %></li>
  <% end %>
</ul>
<% end %>

<%= form_for [@book, @review] do |f| %>
  <%= f.label :title %>
  <%= f.text_field :title %>

  <%= f.label :rating %>
  <%= f.number_field :rating %>

  <%= f.label :description %>
  <%= f.text_field :description %>

  <%= f.label :user %>
  <%= f.text_field :user, required: true %>

  <%= f.submit %>
<% end %>
